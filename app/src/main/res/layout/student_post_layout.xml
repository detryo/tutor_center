<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/post_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/days_in_a_week"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/usertype" />

                <Spinner
                    android:id="@+id/spinner_category_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/preferred_medium"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/usertype" />

                <!--<Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:entries="@array/preferred_medium"
                    android:prompt="@string/usertype" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/preferred_teacher_gender"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/usertype" />

                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spinner_class_id"
                    android:layout_height="wrap_content"
                    android:entries="@array/class_of_student"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:prompt="@string/usertype" />

                <!--<Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:entries="@array/account_type_spinner"
                    android:prompt="@string/usertype" />-->

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/calender_textView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="click to select a start date" />

        <CalendarView
            android:id="@+id/calendar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </CalendarView>

        <EditText
            android:id="@+id/job_salary_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary Range" />

        <EditText
            android:id="@+id/job_address_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />

        <EditText
            android:id="@+id/job_content_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Any additional information" />

        <TextView
            android:background="#0f53c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:layout_gravity="right"
            android:text="POST" />

    </LinearLayout>

</ScrollView>