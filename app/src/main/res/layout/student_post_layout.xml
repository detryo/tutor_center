<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackGroundColor"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/post_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="textAutoCorrect"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/numOfDays_job_post_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <Spinner
                    android:id="@+id/spinner_category_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/tutor_gender_job_post_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <Spinner
                    android:id="@+id/spinner_class_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/job_post_subject_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subjects"
            android:inputType="textAutoCorrect"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/calender_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/calender_textView_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="select date to start  "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:src="@drawable/ic_action_calender" />

        </LinearLayout>


        <CalendarView
            android:id="@+id/calendar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </CalendarView>

        <EditText
            android:id="@+id/job_post_salary_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salary Range"
            android:inputType="number" />

        <EditText
            android:id="@+id/job_address_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/job_post_additional_info_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Any additional information"
            android:inputType="textShortMessage" />

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/job_post_btn_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/saveBtnBackground"
            android:padding="10dp"
            android:text="@string/student_post_btn"
            android:textColor="#fff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <ProgressBar
            android:id="@+id/student_post_progress_bar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>