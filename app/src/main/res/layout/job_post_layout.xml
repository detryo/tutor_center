<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/job_Field_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="88dp">

        <ImageView
            android:id="@+id/user_pro_pic_id"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/text_Field_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/title_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/list_item_icon"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Title" />

            <TextView
                android:id="@+id/salary_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/miwok_text_view"
                android:layout_toRightOf="@+id/list_item_icon"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="salary" />

        </LinearLayout>

        <ImageView
            android:id="@+id/clickButton_id"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingRight="16dp"
            android:src="@drawable/ic_touch_app_black_48dp"/>

    </LinearLayout>


</android.support.v7.widget.CardView>

